{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "pathMappings": {
        "/path/to/drupal/webroot": "${workspaceRoot}"
      },
      "xdebugSettings": {
        "show_hidden": 1
      }
    }
  ]
}